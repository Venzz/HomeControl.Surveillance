<Window
    x:Class="HomeControl.Surveillance.Server.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    Height="350"
    Width="525">
    
    <StackPanel>
        <CheckBox
            Margin="12,12,0,0"
            Content="Send outdoor camera data"
            IsChecked="{Binding SendOutdoorCameraData, Mode=TwoWay}">
        </CheckBox>
        <CheckBox
            Margin="12,12,0,0"
            Content="Send indoor camera data"
            IsChecked="{Binding SendIndoorCameraData, Mode=TwoWay}">
        </CheckBox>
    </StackPanel>
</Window>
