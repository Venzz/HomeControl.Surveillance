<Page
    x:Class="HomeControl.Surveillance.Player.View.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:HomeControl.Surveillance.Player.View.Controls">

    <Grid Background="Transparent">
        <MediaPlayerElement x:Name="VideoPlayer" AutoPlay="True" AreTransportControlsEnabled="True">
            <MediaPlayerElement.TransportControls>
                <Controls:PlayerControls
                    IsPlaybackRateButtonVisible="False"
                    IsVolumeButtonVisible="False"
                    IsFastForwardButtonVisible="True"
                    IsFastForwardEnabled="True"
                    IsPlaybackRateEnabled="True"
                    IsCompact="False"
                    NormalRateEnabled="OnNormalRateEnabled"
                    MaxRateEnabled="OnMaxRateEnabled"
                    FastForwardEnabled="OnFastForwardEnabled"
                    FastForwardDisabled="OnFastForwardDisabled">
                </Controls:PlayerControls>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
    </Grid>
</Page>
