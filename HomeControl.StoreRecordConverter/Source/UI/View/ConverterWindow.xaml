<Window
    x:Class="HomeControl.StoreRecordConverter.View.ConverterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Store Record Converter"
    Height="600"
    Width="600"
    WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent" AllowDrop="True" Drop="OnDrop">
        <ListView ItemsSource="{Binding Files, Mode=OneTime}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="FileName" FontSize="24"/>
                        <TextBlock Grid.Row="1" Text="Path"/>
                        <ProgressBar Grid.Row="2" Value="{Binding Progress, Mode=OneWay}" Maximum="1" Height="6"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
